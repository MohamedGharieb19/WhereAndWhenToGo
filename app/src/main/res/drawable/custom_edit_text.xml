<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--The outline turns to colorPrimary when the EditText is in focus-->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <padding android:bottom="12dp"
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                />
            <solid android:color="@android:color/white" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/green" />
        </shape>
    </item>

    <!--The outline turns to grey when the EditText is out of focus-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="12dp" />
            <padding android:bottom="12dp"
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                />
            <stroke android:width="2dp" android:color="#e1dfe0" />
        </shape>
    </item>
</selector>